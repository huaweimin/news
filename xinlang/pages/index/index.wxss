/**index.wxss**/
.news-list{
  width:100%; 
  height:100%;
  font-size:16px; 
  background:#fff; 
  overflow: hidden;  
}
.news-item{
  border-bottom:1rpx solid #ccc;
  padding:20rpx;
  overflow: hidden;
}
.news-item .news-img{  
  float:left; 
  width:40%;
  height:auto;
  margin-right:20rpx;
}
.news-item .news-img image{
  width:100%; 
}
.news-item .news-title{    
  line-height: 50rpx;
}
.loadover-text{
  font-size:16px;
  text-align:center;
  height:50px;
  line-height:50px;
  color:#ccc;  
}
.loadover-text.hidden{
  display: none;
}
.loadover-text.show{
  display: block;
}